<ui:Window x:Class="PixBeat5.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:ui="http://schemas.modernwpf.com/2019"
           Title="PixBeat 5.0 - Simple Pixel Art Music Video Generator"
           Height="700" Width="900"
           MinHeight="600" MinWidth="800"
           ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,30">
            <TextBlock Text="🎵" FontSize="40" VerticalAlignment="Center" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="PixBeat 5.0" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="Simple Pixel Art Music Video Generator" 
                          FontSize="14" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- Step 1: Audio File -->
                <ui:SimpleStackPanel Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Spacing="15">
                    <TextBlock Text="Step 1: Select Audio File" FontSize="18" FontWeight="SemiBold"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Text="{Binding CurrentProject.Audio.FilePath, Mode=OneWay}"
                                PlaceholderText="No audio file selected"
                                IsReadOnly="True"/>

                        <Button Grid.Column="1"
                               Content="Browse Audio File"
                               Command="{Binding SelectAudioFileCommand}"
                               Margin="10,0,0,0"/>
                    </Grid>

                    <!-- Audio Analysis Results -->
                    <Border Background="{DynamicResource SystemControlBackgroundChromeLowBrush}"
                           CornerRadius="6"
                           Padding="15"
                           Visibility="{Binding HasAnalysis, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="BPM" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding CurrentProject.Audio.Tempo, StringFormat={}{0:F1}}" 
                                          FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Genre" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding CurrentProject.Audio.Genre}" 
                                          FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Key" FontSize="12" Foreground="Gray"/>
                                <TextBlock FontSize="16" FontWeight="SemiBold">
                                    <Run Text="{Binding CurrentProject.Audio.Key}"/>
                                    <Run Text="{Binding CurrentProject.Audio.Mode}"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Duration" FontSize="12" Foreground="Gray"/>
                                <TextBlock Text="{Binding CurrentProject.Audio.Duration, StringFormat={}{0:mm\\:ss}}" 
                                          FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ui:SimpleStackPanel>

                <!-- Step 2: Template Selection -->
                <ui:SimpleStackPanel Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Spacing="15">
                    <TextBlock Text="Step 2: Choose Template" FontSize="18" FontWeight="SemiBold"/>

                    <ItemsControl ItemsSource="{Binding AvailableTemplates}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="Templates"
                                           IsChecked="{Binding Id, Converter={StaticResource EqualsConverter}, ConverterParameter={Binding DataContext.SelectedTemplate, RelativeSource={RelativeSource AncestorType=Window}}}"
                                           Command="{Binding DataContext.SelectTemplateCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                           CommandParameter="{Binding Id}"
                                           Margin="5">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <Border Background="{DynamicResource SystemControlBackgroundChromeLowBrush}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="2"
                                                   CornerRadius="8"
                                                   Padding="15">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}" Value="True">
                                                                <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColorBrush}"/>
                                                                <Setter Property="Background" Value="{DynamicResource SystemAccentColorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <StackPanel>
                                                    <Rectangle Height="80" 
                                                              Fill="Gray" 
                                                              RadiusX="4" RadiusY="4"
                                                              Margin="0,0,0,10"/>
                                                    <TextBlock Text="{Binding Name}" 
                                                              FontWeight="SemiBold" 
                                                              TextAlignment="Center"/>
                                                    <TextBlock Text="{Binding Description}" 
                                                              FontSize="11" 
                                                              Foreground="Gray"
                                                              TextWrapping="Wrap"
                                                              TextAlignment="Center"
                                                              Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ui:SimpleStackPanel>

                <!-- Step 3: Video Settings -->
                <ui:SimpleStackPanel Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Spacing="15">
                    <TextBlock Text="Step 3: Video Settings" FontSize="18" FontWeight="SemiBold"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Aspect Ratio" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox SelectedIndex="0">
                                <ComboBoxItem Content="9:16 (Vertical)"/>
                                <ComboBoxItem Content="1:1 (Square)"/>
                                <ComboBoxItem Content="16:9 (Horizontal)"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,5,0">
                            <TextBlock Text="Duration" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox SelectedIndex="1">
                                <ComboBoxItem Content="15 seconds"/>
                                <ComboBoxItem Content="30 seconds"/>
                                <ComboBoxItem Content="60 seconds"/>
                                <ComboBoxItem Content="Full song"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="5,0,5,0">
                            <TextBlock Text="Quality" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox SelectedIndex="1" SelectedValue="{Binding CurrentProject.Settings.Quality}">
                                <ComboBoxItem Content="Draft" Tag="Draft"/>
                                <ComboBoxItem Content="Standard" Tag="Standard"/>
                                <ComboBoxItem Content="High" Tag="High"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Margin="10,0,0,0">
                            <TextBlock Text="Frame Rate" FontSize="12" Margin="0,0,0,5"/>
                            <ComboBox SelectedIndex="0" SelectedValue="{Binding CurrentProject.Settings.Fps}">
                                <ComboBoxItem Content="30 FPS" Tag="30"/>
                                <ComboBoxItem Content="60 FPS" Tag="60"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel>
                        <TextBlock Text="Watermark Text" FontSize="12" Margin="0,10,0,5"/>
                        <TextBox Text="{Binding CurrentProject.Settings.Watermark}" 
                                PlaceholderText="Enter watermark text (optional)"/>
                    </StackPanel>
                </ui:SimpleStackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="2"
                    Height="6"
                    Value="{Binding ProgressValue}"
                    Maximum="100"
                    Margin="0,20,0,15"
                    Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Status and Action Bar -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding ProgressText}" 
                          FontSize="12" 
                          Foreground="Gray"
                          Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <Button Content="Reset Project" 
                       Command="{Binding ResetProjectCommand}"
                       IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"/>

                <Button Content="Open Output Folder" 
                       Command="{Binding OpenOutputFolderCommand}"
                       IsEnabled="{Binding CurrentProject.OutputPath, Converter={StaticResource NotNullToBooleanConverter}}"
                       Visibility="{Binding CurrentProject.OutputPath, Converter={StaticResource NotNullToVisibilityConverter}}"/>

                <Button Content="🎬 Generate Video!" 
                       Command="{Binding GenerateVideoCommand}"
                       IsEnabled="{Binding CanRender}"
                       Style="{StaticResource AccentButtonStyle}"
                       Width="150" Height="40"
                       FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
    </Grid>

</ui:Window>